<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane fx:id="calendarBoxPane" onMouseClicked="#handleListEvents" styleClass="round-corners" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Rectangle fx:id="calendarHighlight" arcHeight="25.0" arcWidth="25.0" fill="#ffffff00" height="60.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="2.0" width="60.0" />
      <Text fx:id="calendarDate" strokeType="OUTSIDE" strokeWidth="0.0" translateY="-20.0" />
      <VBox fx:id="calendarEvents" alignment="CENTER" maxHeight="35.0" maxWidth="50.0" style="-fx-background-radius: 2; -fx-border-radius: 2;" translateY="7.5" />
      <Label fx:id="now" textFill="WHITE" translateX="17.0" translateY="25.0">
         <padding>
            <Insets left="2.0" right="2.0" />
         </padding>
         <font>
            <Font size="10.0" />
         </font>
      </Label>
   </children>
</StackPane>
